{
  "name": "app",
  "version": "1.0.0",
  "author": "XutyXD",
  "description": "A boilerplate of angular cordova & electron (ACE)",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "ng:serve": "ng serve",
    "ng:serve:web": "ng serve -c web -o",
    "desktop:start": "npm-run-all -p electron:serve desktop:ng:serve",
    "desktop:ng:serve": "npm run ng:serve -- --project=desktop",
    "desktop:build": "npm run electron:serve-tsc && ng build --project=desktop --base-href ./",
    "desktop:build:dev": "npm run desktop:build -- -c dev",
    "desktop:build:prod": "npm run desktop:build -- -c production",
    "mobile:build": "ng build --project=mobile --base-href ./",
    "mobile:build:prod": "npm run mobile:build -- --c production",
    "electron:start": "npm-run-all -p electron:serve desktop:ng:serve",
    "electron:serve-tsc": "tsc -p projects/desktop/tsconfig-serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron projects/desktop --serve",
    "electron:local": "npm run desktop:build:prod && npx electron projects/desktop",
    "electron:build": "npm run desktop:build:prod && electron-builder build",
    "cordova:build": "cd projects/cordova && cordova build android",
    "cordova:build:emulator": "npm-run-all -p mobile:build && cordova:build -- --emulator",
    "cordova:build:device": "npm-run-all -p mobile:build && cordova:build -- --device",
    "cordova:build:prod": "npm-run-all -p mobile:build:prod && npm run cordova:build -- --release",
    "cordova:build:prod:emulator": "npm run cordova:build:prod -- --emulator",
    "cordova:build:prod:device": "npm run cordova:build:prod -- --device"
  },
  "main": "projects/desktop/index.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.5",
    "@angular/common": "~10.0.5",
    "@angular/compiler": "~10.0.5",
    "@angular/core": "~10.0.5",
    "@angular/forms": "~10.0.5",
    "@angular/platform-browser": "~10.0.5",
    "@angular/platform-browser-dynamic": "~10.0.5",
    "@angular/router": "~10.0.5",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.4",
    "@angular-devkit/build-ng-packagr": "~0.1000.4",
    "@angular/cli": "~10.0.4",
    "@angular/compiler-cli": "~10.0.5",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "electron-reload": "^1.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5",
    "wait-on": "^5.1.0"
  }
}
